      <%= f.label :Email %>
      <%= f.text_field :email %>
    </div>
    <div>
      <%= f.label "Eres vegano?" %>
      <%= f.select :vegan, [["Si", true], ["No", false]], include_blank: "Selecciona una opciÃ³n"  %>
