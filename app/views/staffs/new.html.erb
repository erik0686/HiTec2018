<body style="background-color: #002442" class="text-white">
  <%= render "layouts/navbarSimple" %>

  <div class="container" style="height: 100%; margin-top: 5rem;">
    <h2 class="mb-4">Registro</h2>
    <%= form_for @staff, class:"staff-registration" do |f| %>
      <div class="form-group">
        <label for="exampleFormControlSelect1">Sexo</label>
        <%= f.select :sex, ["M", "H", "Otro"], {include_blank: "Selecciona una opción"} , {class:"form-control", id:"exampleFormControlSelect1", required:true} %>
      </div>
      <div class="form-group">
        <label for="user">Nombre(s)</label>
        <%= f.text_field :name, class:"form-control", id:"name", required: true %>
      </div>
      <div class="form-group">
        <label for="user">Apellido Paterno</label>
        <%= f.text_field :last_name_1, class:"form-control", id:"name", required: true %>
      </div>
      <div class="form-group">
        <label for="user">Apellido Materno</label>
        <%= f.text_field :last_name_2, class:"form-control", id:"name", required: true %>
      </div>
      <div class="form-group">
        <label for="user">Matrícula</label>
        <%= f.text_field :matricula, class:"form-control", placeholder:"Ej. 1463376", pattern:"[0-9]{7}", required:true, minlength: 7, maxlength: 7%>
        <small>Introduce tu matrícula sin A0.</small>
      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect1">Carrera</label>
        <%= f.select :career, staff_careers, {include_blank: "Selecciona una opción"} , {class:"form-control", id:"exampleFormControlSelect1", required:true} %>
      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect1">Puesto</label>
        <%= f.select :role, role_options, { include_blank: "Selecciona una opción" }, {class:"form-control", id:"staff_role", required: true} %>

      </div>
      <div class="form-group">
        <label for="exampleFormControlSelect1">Edificio*</label>
        <%= f.select :building_id, options_for_select(id_color_building), {include_blank: "Selecciona una opción"}, { class:"form-control", id:"staff_building"} %>
        <small>*Si eres capitán/a de edificio favor de seleccionar tu edificio. Ej. Rojo CETEC</small>
        <div class="invalid_feedback"></div>
      </div>
      <%= f.submit "Registrar", class:"btn text-white", style:"background-color: #97bf11" %>
    <% end %>
  </div>
</body>
